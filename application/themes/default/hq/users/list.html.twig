{% extends '_layouts/hq/hq.html.twig' %}

{% block content %}
<div class="container-fluid" id="content">
    <div class='row-fluid'>
		<div class='span12'>
			<h3>Users</h3>
		</div>
	</div>
	<div class='row-fluid'>
		{% include 'hq/users/left_menu.html.twig' %}
		
		<div class='span9'>
			<table class='table table-striped table-bordered table-hover'>
				<thead>
	            	<tr>
	            		<th>{{ lang('index_fname_th') }}</th>
	            		<th>{{ lang('index_lname_th') }}</th>
	            		<th>{{ lang('index_email_th') }}</th>
	            		<th>{{ lang('index_groups_th') }}</th>
	            		<th>{{ lang('index_status_th') }}</th>
	            		<th>{{ lang('index_action_th') }}</th>
	            	</tr>
	            </thead>
				<tbody>
					{% for user in users %}
	                <tr>
	        			<td>{{ user.first_name }}</td>
	        			<td>{{ user.last_name }}</td>
	        			<td>{{ user.email }}</td>
	        			<td>
	        				{% for group in user.groups %}
	        					{{ anchor("hq/users/edit_group/" ~ group.id, group.name) }}<br />
	                        {% endfor %}
	        			</td>
	        			<td>{{ (user.active) ? anchor("hq/users/deactivate/" ~ user.id, lang('index_active_link')) : anchor("hq/users/activate/". user.id, lang('index_inactive_link')) }}</td>
	        			<td>{{ anchor("hq/users/edit_user/" ~ user.id, 'Edit') }}</td>
	        		</tr>
	            	{% endfor %}
    			</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}