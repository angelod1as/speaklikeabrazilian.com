{% extends '_layouts/auth/auth.html.twig' %}

{% block content %}
<style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
</style>
<div class="container-fluid" id="content">
    <div class='row-fluid'>
    	<div class='span6 offset3 center'>
	        {{ validation_errors() }}
	        {{ form_open('auth/login', 'class="form-signin"') }}
	        	<br/>
	        	<h1 class='center'>{{ lang('login_heading') }}</h1>
	        	<p class='center'><small>{{ lang('login_subheading') }}</small></p>
	        	{{ form_hidden('from', from) }}
	        	{{ form_input(identity, '', 'class="input-block-level" placeholder="' ~ lang('login_identity_label') ~'"') }}
	        	{{ form_input(password, '', 'class="input-block-level" placeholder="' ~ lang('login_password_label') ~'"') }}
		        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
	        {{ form_close() }}
	
	        <p><a href="forgot_password"><{{ lang('login_forgot_password') }}</a></p>
	    </div>
    </div>
</div>
<script type="text/javascript">
function templatecallback() {
};
</script>
{% endblock %} 